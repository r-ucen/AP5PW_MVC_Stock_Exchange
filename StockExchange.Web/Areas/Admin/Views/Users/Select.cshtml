@model IList<UserViewModel>
@using System.Security.Claims
@using StockExchange.Infrastructure.Identity.Enums

@{
    ViewData["Title"] = "User Administration";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var loggedInAsAdmin = User.IsInRole(nameof(Roles.Admin));
    var loggedInAsManager = User.IsInRole(nameof(Roles.Manager));
}

<h1>@ViewData["Title"]</h1>

@{
    if (Model!= null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@nameof(UserViewModel.Id)</th>
                        <th scope="col">@nameof(UserViewModel.Username)</th>
                        <th scope="col">@nameof(UserViewModel.Email)</th>
                        <th scope="col">@nameof(UserViewModel.PhoneNumber)</th>
                        <th scope="col">@nameof(UserViewModel.FirstName)</th>
                        <th scope="col">@nameof(UserViewModel.LastName)</th>
                        <th scope="col">@nameof(UserViewModel.Roles)</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        var userIsCurrentUser = currentUserId == user.Id.ToString();
                        var userIsAdmin = user.Roles.Contains(nameof(Roles.Admin));
                        var userIsManager = user.Roles.Contains(nameof(Roles.Manager));

                        <tr>
                            <th scope="row">@user.Id</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber != null ? user.PhoneNumber : "-")</td>
                            <td>@(user.FirstName != null ? user.FirstName : "-")</td>
                            <td>@(user.LastName != null ? user.LastName : "-")</td>
                            <td>@string.Join(", ", @user.Roles)</td>
                            <td>

                                @if (loggedInAsAdmin)
                                {
                                    @if (!userIsAdmin && !userIsCurrentUser) {
                                        <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-success">Edit Roles</a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>

                                        @if (user.IsDisabled)
                                {
                                            <span class="btn btn-secondary disabled">Disable</span>
                                            <a asp-action="Enable" asp-route-id="@user.Id" class="btn btn-success">Enable</a>
                                    }
                                    else
                                    {
                                            <a asp-action="Disable" asp-route-id="@user.Id" class="btn btn-warning">Disable</a>
                                            <span class="btn btn-secondary disabled">Enable</span>
                                    }
                                }
                                    else {
                                    <span class="btn btn-secondary disabled" title="Cannot edit roles">Edit Roles</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Delete</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Disable</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Enable</span>
                                }
                                } else if (loggedInAsManager)
                                {
                                    @if (!userIsAdmin && !userIsManager && !userIsCurrentUser)
                                {
                                        <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-success">Edit Roles</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>

                                    @if (user.IsDisabled)
                                    {
                                        <span class="btn btn-secondary disabled">Disable</span>
                                        <a asp-action="Enable" asp-route-id="@user.Id" class="btn btn-success">Enable</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Disable" asp-route-id="@user.Id" class="btn btn-warning">Disable</a>
                                        <span class="btn btn-secondary disabled">Enable</span>
                                    }
                                }
                                else
                                {
                                        <span class="btn btn-secondary disabled" title="Cannot edit roles">Edit Roles</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Delete</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Disable</span>
                                        <span class="btn btn-secondary disabled" title="Cannot modify">Enable</span>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
