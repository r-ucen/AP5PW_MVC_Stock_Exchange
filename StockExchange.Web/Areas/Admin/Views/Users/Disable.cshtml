@model UserViewModel

@{
    ViewData["Title"] = "Disable User";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to suspend this user?</h3>

<div>
    <h4>@Model.Username</h4>
    <hr />

    <dl>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @(Model.PhoneNumber != null ? Model.PhoneNumber : "-")
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Roles
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", @Model.Roles)
        </dd>

        <form asp-action="Disable" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Disable</button>
            <a asp-action="Select" class="btn btn-secondary">Cancel</a>
        </form>
</div>