@model Stock

@{
    ViewData["Title"] = "Delete Stock";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this stock?</h3>

<div>
    <h4>@Model.TickerSymbol - @Model.FullName</h4>
    <hr />

    <dl>
        <dt class="col-sm-2">
            @Model.FullName
        </dt>

        <dd class="col-sm-10">
            <span>$ </span>
            <span data-stock-price="@Model.TickerSymbol">@Model.CurrentPrice</span>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Select" class="btn btn-secondary">Cancel</a>
    </form>
</div>