@model Stock

@{
    ViewData["Title"] = "Update Stock";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.TickerSymbol - @Model.FullName</h4>
<hr />

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="TickerSymbol"></label>
        <input class="form-control" asp-for="TickerSymbol">
        <span asp-validation-for="TickerSymbol" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="FullName"></label>
        <input class="form-control" asp-for="FullName">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="CurrentPrice"></label>
        <input class="form-control" asp-for="CurrentPrice">
        <span asp-validation-for="CurrentPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="ImageSrcUrl"></label>
        <input class="form-control" asp-for="ImageSrcUrl">
        <span asp-validation-for="ImageSrcUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<div class="mt-3">
    <a asp-action="Select" class="btn btn-secondary">Back to Stock List</a>
</div>


