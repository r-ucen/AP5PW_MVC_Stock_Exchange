@model IList<PortfolioHoldingViewModel>

@{
    ViewData["Title"] = "Portfolio";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mb-4">
        @await Component.InvokeAsync("PortfolioSummary")
    </div>

    <div class="col-md-8">
        <h3 class="mb-3">Holdings</h3>

        @if (Model.Count == 0)
        {
            <div class="alert alert-secondary"> No holdings yet</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var holding in Model)
                {
                    var gainClass = holding.GainLoss >= 0 ? "text-success" : "text-danger";
                    if (holding.GainLoss == 0)
                    {
                        gainClass = "text-white";
                    }

                    <div class="list-group-item holding-row">
                        <div class="me-3">
                            <div class="fw-semibold">@holding.FullName</div>
                            <div>@holding.TickerSymbol</div>
                            <small>@holding.Quantity</small>
                        </div>

                        <div>
                            <div>$ <span>@holding.TotalValue.ToString("N2")</span></div>
                            <div class="@gainClass">
                                $ <span>@holding.GainLoss.ToString("N2")</span>
                                (<span>@holding.GainLossPercentage.ToString("N2")</span> %)
                            </div>
                        </div>

                        <div>
                            $ <span>@holding.CurrentPrice.ToString("N2")</span>
                        </div>

                        <div>
                            <button class="btn btn-primary">Buy more</button>
                            <button class="btn btn-secondary">Sell</button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
