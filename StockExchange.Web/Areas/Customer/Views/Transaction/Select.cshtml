@model IList<TransactionViewModel>

@{
    ViewData["Title"] = "Transactions";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mb-4">
        @await Component.InvokeAsync("PortfolioSummary")
    </div>

    <div class="col-md-8">
        
        @if (Model.Count == 0)
        {
            <div class="alert alert-secondary">No transaction made yet</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var transaction in Model)
                {

                    <div class="list-group-item transaction-row">
                        <div>
                            @if (transaction.TransactionType == "BUY") {
                                <span class="badge bg-success">Bought </span>
                            }
                            else if (transaction.TransactionType == "SELL") {
                                <span class="badge bg-danger">Sold </span>
                            }
                            <span>@(transaction.Quantity)</span>
                             Shares Of 
                            <span class="fw-semibold">@(transaction.FullName)</span>
                             (<span>@(transaction.TickerSymbol)</span>)
                            at $ <span>@(transaction.Price.ToString("N2"))</span>
                        </div>

                        <div>
                            on <span>@(transaction.TransactionDate.ToString("g"))</span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

</div>
