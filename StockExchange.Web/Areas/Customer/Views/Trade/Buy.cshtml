@model TradeViewModel

@{
    ViewData["Title"] = "Buy Stock";
}

<h1>Buy Order</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">@Model.FullName (@Model.TickerSymbol)</h5>
            </div>
            <div class="card-body">
                <p><strong>Current Price: $</strong> @Model.CurrentPrice.ToString("N2")</p>
                <p><strong>Available Cash: $</strong> @Model.AvailableCash.ToString("N2")</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <form asp-action="Buy" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockId" />
            <input type="hidden" asp-for="TickerSymbol" />
            <input type="hidden" asp-for="FullName" />
            <input type="hidden" asp-for="CurrentPrice" />
            <input type="hidden" asp-for="AvailableCash" />

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Confirm Purchase</button>
                <a asp-area="Customer" asp-controller="Portfolio" asp-action="Select" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
