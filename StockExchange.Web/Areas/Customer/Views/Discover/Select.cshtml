@model IList<Stock>


@{
    ViewData["Title"] = "Discover";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mb-4">
        @await Component.InvokeAsync("PortfolioSummary")
    </div>

    <div class="col-md-8">

        @if (Model.Count == 0)
        {
            <div class="alert alert-secondary">No available stock</div>
        }
        else
        {
            <div class="holding-list discover-list">
                @foreach (var stock in Model)
                {
                    <div class="holding-row" data-stock-id="@stock.Id">
                        <div>
                            @if (!string.IsNullOrEmpty(stock.ImageSrc))
                            {
                                <img class="stock-icon" src="@Url.Content(stock.ImageSrc)" alt="@stock.FullName" />
                            }
                            else
                            {
                                <div class="stock-icon-placeholder"></div>
                            }
                        </div>

                        <div>
                            <div class="fw-semibold">@stock.FullName</div>
                            <div>@stock.TickerSymbol</div>
                        </div>

                        <div>
                            $ <span data-stock-price="@stock.TickerSymbol">@stock.CurrentPrice.ToString("N2")</span>
                        </div>

                        <div>
                            <a class="btn btn-primary" asp-area="Customer" asp-controller="Trade" asp-action="Buy" asp-route-stockId="@stock.Id">Buy</a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
